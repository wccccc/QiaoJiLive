<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xin.heipichao.qiaojilive.MainActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:id="@+id/tb_toolBar"
        android:background="@color/mainColor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_logo"/>
            <xin.heipichao.qiaojilive.view.SelectView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:id="@+id/sv_selectView"
                app:textSize="16sp"
                app:leftText="推荐"
                app:rightText="分区"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_toolBar"
        android:id="@+id/vp_viewPage">

    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_cardView"
        app:contentPaddingBottom="0dp"
        app:contentPaddingLeft="0dp"
        app:contentPaddingRight="0dp"
        android:layout_alignParentBottom="true">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:checkedButton="@+id/rb_huya"
            android:id="@+id/rg_group">
            <RadioButton
                android:text="虎牙"
                android:id="@id/rb_huya"
                android:drawableTop="@mipmap/huya"
                style="@style/radioButtonStyle"/>
            <RadioButton
                android:text="斗鱼"
                android:id="@+id/rb_douyu"
                android:drawableTop="@mipmap/douyu"
                style="@style/radioButtonStyle"/>
        </RadioGroup>
    </android.support.v7.widget.CardView>
</RelativeLayout>
