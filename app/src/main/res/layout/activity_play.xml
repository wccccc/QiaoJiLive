<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xin.heipichao.qiaojilive.PlayActivity">

    <com.ijkplayer.IjkVideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/player"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/PlayerToolbarTitleSize"
            app:navigationIcon="@mipmap/ic_back"
            android:background="@color/playerStateBarColor"
            android:id="@+id/tb_toolBar">
    </android.support.v7.widget.Toolbar>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/fl_menu_content">

    </FrameLayout>
</RelativeLayout>
